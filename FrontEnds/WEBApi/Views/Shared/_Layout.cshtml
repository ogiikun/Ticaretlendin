<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ana Sayfa -  Ticaretlendin</title>
    <link href="~/lib/bootstrap-5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/146bc1bbf2.js" crossorigin="anonymous"></script>
    <style>
       .ikon .fa-truck-fast{
            color:white;
            margin-right:10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background:#8b658b;">
            <div class="container">
                <div class="ikon">
                    <i class="fa-solid fa-truck-fast fa-xl"></i>
                 </div>
                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:white; font-weight: bold;">Ticaretlendin</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1" >
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" >Ana Sayfa</a>
                        </li>
                         <li class="nav-item" >
                            <a class="nav-link text-white" asp-area="" asp-controller="Products" asp-action="Index" >Ürünlerim</a>
                        </li>



                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav" >
                             <li class="nav-item dropdown">
                                  <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color:white;">
                                    @User.Identity.Name
                                  </a>
                                  <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Index" >Profil</a></li>
     
                                    <li><a class="dropdown-item" asp-controller="Basket" asp-action="Index" >Sepet</a></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="LogOut" >Çıkış</a></li>
                                  </ul>
                              </li>

                        </ul>


                    }
                    else
                    {
                        <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="SignIn" >Giriş Yap</a>

                    }
                    
                       
                    

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WEBApi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-5.2/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
