@{
    ViewData["Title"] = "Index";
}

@model BasketViewModel

<div class="row">

    <div class="col-md-8 offset-md-2">

        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Sepet</h5>

                @if (Model != null && Model.BasketItems.Any())
                {
                    <table class="table table-striped">

                        <tr>
                            <th>Ürün isim</th>
                            <th>Ürün fiyat</th>
 
                        </tr>

                        @foreach (var item in Model.BasketItems)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                                      
                            
                            <th colspan="2">@Model.TotalPrice TL</th>
                                <td>
                                    <a class="btn btn-outline-danger" asp-controller="Basket" asp-action="RemoveBasketItem" asp-route-courseId="@item.CourseId">sil</a>
                                
                                </td>
                            
                            </tr>
                        }

                       


                    </table>

                         <a class="btn btn-outline-success" asp-controller="Order" asp-action="Checkout">Ödeme bilgileri</a>
                         <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Ürünlere Dön</a>
                }
                else
                {
                    <div class="alert alert-info">Sepet boş</div>
                }
            </div>
        </div>
    </div>
</div>